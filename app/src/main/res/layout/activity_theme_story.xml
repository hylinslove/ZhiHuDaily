<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_theme_story"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="demo.liuchen.com.zhihudiary.view.activity.ThemeStoryActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolBar_theme_story"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:navigationIcon="@drawable/back_icon"
        app:title="内容"
        app:titleTextColor="@color/white"
        />

    <WebView
        android:layout_below="@id/toolBar_theme_story"
        android:id="@+id/web_theme"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </WebView>

</RelativeLayout>
